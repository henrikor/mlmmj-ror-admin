<%= form_for(@change) do |f| %>
<% if @change.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@change.errors.count, "error") %> prohibited this change from being saved:</h2>

  <ul>
    <% @change.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div id="members">
  <% if defined?(@subscribers) %>
  <strong>Subscribed adresses:</strong>
  <textarea id="subscribed"><%= @subscribers %></textarea>
  <% end %>
  <div class="field">
    <%= f.label :added_adresses %><br>
    <%= f.text_area :added_adresses %>
  </div>
  <div class="field">
    <div class="unsub">
     <h1 class="ui-widget-header">Shopping Cart</h1>
     <div class="ui-widget-content">
      <ol>
        <li class="placeholder">Add your items here</li>
      </ol>
    </div>

    <%= f.label :removed_adresses %><br>
    <%= f.text_area :removed_adresses %>
  </div>
</div>
<div class="actions">
  <%= f.submit %>
</div>
</div> 
<% end %>
